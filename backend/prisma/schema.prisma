generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

enum TransactionType {
  INCOME
  EXPENSE
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  passwordHash String
  fullName     String        @default("")

  categories   Category[]
  transactions Transaction[]

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model CategoryTemplate {
  id              String   @id @default(cuid())
  key             String   @unique 
  name            String
  normalizedTitle String   @unique
  description     String?
  iconKey         String
  colorKey        String

  categories      Category[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Category {
  id              String   @id @default(cuid())
  name            String
  normalizedTitle String
  description     String?
  iconKey         String
  colorKey        String

  templateId      String?
  template        CategoryTemplate? @relation(fields: [templateId], references: [id])

  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  transactions    Transaction[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([userId, normalizedTitle])
  @@index([userId])
  @@index([templateId])
}

model Transaction {
  id           String          @id @default(cuid())
  title        String
  amountCents  Int
  type         TransactionType
  occurredAt   DateTime        @default(now())

  userId       String
  user         User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  categoryId   String?
  category     Category?       @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  @@index([userId])
  @@index([categoryId])
}
