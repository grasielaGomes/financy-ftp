{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 22",
  "compilerOptions": {
    "lib": ["ES2024"],
    "module": "NodeNext",
    "target": "ES2024",
    "strict": true,
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
